@model HumanGroupProjeA.Models.Entity.Customer
@{
    ViewBag.Title = "CustomerEdit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("CustomerUpdate", "Customer", FormMethod.Post))
{
    <div class="form">
        <div>
            <label>ID</label>
            @Html.TextBoxFor(x => x.ID, new { @class = "form-control" ,disabled="true" })
        </div>
        <div>
            <label>Name</label>
            @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
        </div>
        <div>
            <label>Surname</label>
            @Html.TextBoxFor(x => x.Surname, new { @class = "form-control" })
        </div>
        <div>
            <label>Mail</label>
            @Html.TextBoxFor(x => x.Mail, new { @class = "form-control" })
        </div>
        <div>
            <label>Phone Number</label>
            @Html.TextBoxFor(x => x.PhoneNumber, new { @class = "form-control" })
        </div>
        <div>
            <label>Tc</label>
            @Html.TextBoxFor(x => x.Tc, new { @class = "form-control" })
        </div>
        <div>
            <label>Gender</label>
            @Html.TextBoxFor(x => x.Gender, new { @class = "form-control" })
        </div>
        <div>
            <label>Education</label>
            @Html.TextBoxFor(x => x.Education, new { @class = "form-control" })
        </div>
        <div>
            <button class="btn btn-primary">Update</button>
        </div>
    </div>
    

}

